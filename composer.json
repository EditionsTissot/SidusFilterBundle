{
    "name": "sidus/filter-bundle",
    "description": "Simple yml-configuration-based filtering with Doctrine ORM abstraction",
    "keywords": [
        "filter",
        "doctrine",
        "sort",
        "datagrid"
    ],
    "homepage": "https://github.com/VincentChalnot/SidusFilterBundle",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Vincent Chalnot",
            "email": "vincent@sidus.fr",
            "homepage": "https://sidus.fr",
            "role": "Developer"
        },
        {
            "name": "Madeline Veyrenc",
            "email": "mveyrenc@clever-age.com",
            "homepage": "https://github.com/mveyrenc",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Sidus\\FilterBundle\\": ""
        }
    },
    "require": {
        "php": ">=7.1",
        "symfony/dependency-injection": ">=3.0",
        "symfony/http-kernel": ">=3.0",
        "symfony/config": ">=3.0",
        "symfony/form": ">=3.0",
        "symfony/options-resolver": ">=3.0",
        "symfony/http-foundation": ">=3.0",
        "symfony/property-access": ">=3.0",
        "pagerfanta/pagerfanta": ">=2.7",
        "sidus/base-bundle": "~1.0"
    },
    "suggest": {
        "doctrine/doctrine-bundle": "Without Doctrine ORM, this bundle won't do anything out of the box"
    },
    "require-dev": {
        "editions-tissot/php-cs-fixer-config": "^2.0"
    },
    "scripts": {
        "code-style-check": "./vendor/bin/php-cs-fixer fix --dry-run --verbose",
        "code-style-fix": "./vendor/bin/php-cs-fixer fix --using-cache=no",
    }
}
